@model List<XssDemo.Models.IBlogComment>
@{
    ViewBag.Title = "XSS Demo";
}

<h2>XSS Demo</h2>

<h4>Comments</h4>
@Html.ActionLink("Add comment", "AddComment", null, new { @class = "btn btn-primary" })
@Html.ActionLink("Add comment (ValidateInput method)", "AddComment2", null, new { @class = "btn btn-primary" })
@Html.ActionLink("Add comment (Anti XSS)", "AddComment3", null, new { @class = "btn btn-primary" })
<dl>
    @foreach (var comment in Model)
    {
        <dt>From: @comment.Email</dt>
        <dd>@Html.Raw(comment.Comments)</dd>
    }
</dl>