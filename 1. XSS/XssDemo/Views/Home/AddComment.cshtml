@model XssDemo.Models.NewBlogComment
@{
    ViewBag.Title = "XSS Demo";
}

<h2>XSS Demo</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new {@class = "control-label col-md-3"})
            <div class="col-md-9">
                @Html.EditorFor(m => m.Email, new {htmlAttributes = new {@class = "form-control"}})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Comments, new {@class = "control-label col-md-3"})
            <div class="col-md-9">
                @Html.EditorFor(m => m.Comments, new {htmlAttributes = new {@class = "form-control"}})
            </div>
        </div>
        <input type="submit" value="Submit" class="btn btn-primary"/>
    </div>
}